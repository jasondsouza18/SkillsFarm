<div id="quickview-login">
    <div class="modal fade" id="login" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">
                            <i class="zmdi zmdi-close"></i></span></button>
                </div>
                <div class="modal-body">
                    <div class="form-pop-up-content ptb-60 pl-60 pr-60">
                        <div class="area-title text-center mb-43">
                            <img src="/img/logo375.png" style="width: 300px;height: 75px;" alt="jobhere">
                        </div>
                        <form action="{{ path('_home') }}" method="post">
                            <h3><label style="color: black;padding-left: 29%;"><strong>Jobseeker
                                        Login</strong></label></h3>
                            <div class="form-box">
                                <input type="text" id="username" class="mb-14"  name="_username" placeholder="Username" required
                                       value="{% if last_username is defined %}{{ last_username }}{% endif %}"/>
                                <input type="password" id="password" name="_password" placeholder="Password" required/>
                            </div>
                            <div class="fix ptb-30">
                                <span class="remember pull-left"><input class="p-0 pull-left" type="checkbox">Remember Me</span>
                                <span class="pull-right">
                                           <a class="modal-view button" href="#" data-toggle="modal"
                                              data-target="#forgotpassword">forgot password</a>
                                </span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="text-uppercase">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% include "forgotpassword.html.twig" %}
<!--End of Login Form-->