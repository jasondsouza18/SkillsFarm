                                <script>
                                    function getstring(description, j) {
                                        description = description.split("&lt;img");
                                        description = description['1'].split('; /&gt;');
                                        var desc = description['1'];
                                        var image = description['0'];
                                        image = image.split("src=&quot;")
                                        image = image['1'].split("&quot;");
                                        image = image['0'];
                                        document.getElementById('desc_' + j).innerHTML = desc;
                                        document.getElementById('img_' + j).src = image;
                                    }

                                    getstring("{{ i.description }}",{{ j }});
                                </script>

                            </div>
                        </div>
                        {% set j=j+1 %}
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
