{% extends "base.html.twig" %}
{% block title %}Skillsfarm{% endblock %}
{% block body %}
    <div class="breadcrumb-banner-area pt-94 pb-85 bg-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb-text">
                        <h2 class="text-center">Contact Us</h2>
                        <div class="breadcrumb-bar">
                            <ul class="breadcrumb text-center m-0">
                                <li>
                                    <a href="index.html">Home</a>
                                </li>
                                <li>Contact Us</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End of Breadcrumb Banner Area-->
    <!--Start of Google Map-->
    <div class="map-conact-form-area fix ptb-130 ptb-sm-60">
        <div class="container">
            <div class="google-map-area">
                <!-- Map Section -->
                <div id="contacts" class="map-area">
                    <div id="googleMap" style="width:100%;height:485px;"></div>
                </div>
            </div>
        </div>
        <!--Start of Contact Form And info-->
        <div class="container">
            <div class="gray-bg fix">
                <div class="col-4 light-gray-bg contact-left">
                    <div class="contact-info text-center">
                        <div class="single-contact-info">
                            <div class="single-contact-icon">
                                <i class="zmdi zmdi-email"></i>
                            </div>
                            <div class="single-contact-text">
                                <span class="block">support@skillsfarm.in</span>
                                <span class="block">skillsfarmindia@gmail.com</span>
                            </div>
                        </div>
                        <div class="single-contact-info">
                            <div class="single-contact-icon">
                                <i class="zmdi zmdi-phone"></i>
                            </div>
                            <div class="single-contact-text">
                                <span class="block">+91 9945594954
                                </span>
                                <span class="block">+91 9945594954
                                </span>
                            </div>
                        </div>
                        <div class="single-contact-info">
                            <div class="single-contact-icon">
                                <i class="zmdi zmdi-pin"></i>
                            </div>
                            <div class="single-contact-text">
                                <span class="block">Plankala Kripa, Jp Nagar 8th Phase</span>
                                <span class="block">Karnataka, Bangalore - 560083</span>
                            </div>
                        </div>
                    </div>
                    <div class="followus">
                        <h4>Follow Us</h4>
                        <div class="social-links">
                            <a href="#">
                                <i class="zmdi zmdi-facebook"></i>
                            </a>
                            <a href="#">
                                <i class="zmdi zmdi-rss"></i>
                            </a>
                            <a href="#">
                                <i class="zmdi zmdi-google-plus"></i>
                            </a>
                            <a href="#">
                                <i class="zmdi zmdi-pinterest"></i>
                            </a>
                            <a href="#">
                                <i class="zmdi zmdi-instagram"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-8 contact-right">
                    <div class="contact-form pt-60 pb-30 fix">
                        <h4>Get In Touch</h4>
                        {{ form_start(form) }}
                            <div class="col-5 pr-6">
                             {{ form_widget(form.vc_name, { 'class':'pl-20','attr': {'placeholder': 'Name'} }) }}
                            </div>
                            <div class="col-5 pl-6">
                             {{ form_widget(form.vc_email, { 'class':'pl-20','attr': {'placeholder': 'Email'} }) }}
                            </div>
                            <div class="col-10">
                            {{ form_widget(form.vc_subject, { 'class':'pl-20','attr': {'placeholder': 'Subject'} }) }}
                            </div>
                            <div class="col-10">
                             {{ form_widget(form.vc_message, { 'class':'mb-10','attr': {'placeholder': 'Message'} }) }}
                            </div>
                            <div class="col-10 fix">
                                <button type="submit" class="button submit-btn">SUBMIT</button>
                            </div>
                            <p class="form-messege"></p>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
